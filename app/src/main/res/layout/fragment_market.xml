<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/market_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_wallpaper"
    tools:context=".fragments.MarketFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:textColor="@color/navy_700"
        android:fontFamily="@font/montserrat_bold"
        android:textAlignment="center"
        android:textSize="24sp"
        android:text="Market"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="22dp"
            android:layout_marginEnd="22dp"
            android:layout_marginBottom="26dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="14dp"
                android:background="@drawable/body_card_market"
                android:backgroundTint="@color/gray_700">

                <TextView
                    android:id="@+id/tv_market_duplicate_point"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="57dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/roboto_regular"
                    android:gravity="center_vertical"
                    android:text="x2 Point"
                    android:textColor="@color/white"
                    android:textSize="17sp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="142dp"
                android:layout_height="25dp"
                android:layout_marginStart="42dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/body_card_market"
                android:backgroundTint="@color/navy_700">

                <TextView
                    android:id="@+id/tv_market_price_duplicate_point"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="28dp"
                    android:fontFamily="@font/roboto_medium"
                    android:gravity="center_vertical"
                    android:text="150 Score"
                    android:textColor="@color/white"
                    android:textSize="17sp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:gravity="end">

                <RelativeLayout
                    android:layout_width="46dp"
                    android:layout_height="46dp"
                    android:background="@drawable/add_card_market"
                    android:backgroundTint="@color/navy_700">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/btn_market_buy_duplicate_point"
                            android:layout_width="42dp"
                            android:layout_height="42dp"
                            android:background="@drawable/ic_add_circle"
                            android:backgroundTint="@color/white" />

                    </RelativeLayout>

                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="66dp"
                android:layout_height="66dp"
                android:background="@drawable/oval_quest"
                android:backgroundTint="@color/gold">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="42dp"
                        android:layout_height="42dp"
                        android:background="@drawable/ic_hand_coin"
                        android:backgroundTint="@color/white" />

                </RelativeLayout>

            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="22dp"
            android:layout_marginEnd="22dp"
            android:layout_marginBottom="26dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="14dp"
                android:background="@drawable/body_card_market"
                android:backgroundTint="@color/gray_700">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="57dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/roboto_regular"
                    android:gravity="center_vertical"
                    android:text="Buy high score emblem"
                    android:textColor="@color/white"
                    android:textSize="17sp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="142dp"
                android:layout_height="25dp"
                android:layout_marginStart="42dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/body_card_market"
                android:backgroundTint="@color/navy_700">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="28dp"
                    android:fontFamily="@font/roboto_medium"
                    android:gravity="center_vertical"
                    android:text="3000 Score"
                    android:textColor="@color/white"
                    android:textSize="17sp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:gravity="end">

                <RelativeLayout
                    android:layout_width="46dp"
                    android:layout_height="46dp"
                    android:background="@drawable/add_card_market"
                    android:backgroundTint="@color/navy_700">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/btn_market_buy_high_score"
                            android:layout_width="42dp"
                            android:layout_height="42dp"
                            android:background="@drawable/ic_add_circle"
                            android:backgroundTint="@color/white" />

                    </RelativeLayout>

                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="66dp"
                android:layout_height="66dp"
                android:background="@drawable/oval_quest"
                android:backgroundTint="@color/navy_700">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="42dp"
                        android:layout_height="42dp"
                        android:background="@drawable/ic_medal"
                        android:backgroundTint="@color/white" />

                </RelativeLayout>

            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="22dp"
            android:layout_marginEnd="22dp"
            android:layout_marginBottom="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="14dp"
                android:background="@drawable/body_card_market"
                android:backgroundTint="@color/gray_700">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="57dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/roboto_regular"
                    android:gravity="center_vertical"
                    android:text="Buy high point emblem"
                    android:textColor="@color/white"
                    android:textSize="17sp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="142dp"
                android:layout_height="25dp"
                android:layout_marginStart="42dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/body_card_market"
                android:backgroundTint="@color/navy_700">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="28dp"
                    android:fontFamily="@font/roboto_medium"
                    android:gravity="center_vertical"
                    android:text="6000 Point"
                    android:textColor="@color/white"
                    android:textSize="17sp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:gravity="end">

                <RelativeLayout
                    android:layout_width="46dp"
                    android:layout_height="46dp"
                    android:background="@drawable/add_card_market"
                    android:backgroundTint="@color/navy_700">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/btn_market_buy_high_point"
                            android:layout_width="42dp"
                            android:layout_height="42dp"
                            android:background="@drawable/ic_add_circle"
                            android:backgroundTint="@color/white" />

                    </RelativeLayout>

                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="66dp"
                android:layout_height="66dp"
                android:background="@drawable/oval_quest"
                android:backgroundTint="@color/gray_500">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="42dp"
                        android:layout_height="42dp"
                        android:background="@drawable/ic_award"
                        android:backgroundTint="@color/white" />

                </RelativeLayout>

            </RelativeLayout>

        </RelativeLayout>


    </LinearLayout>


</RelativeLayout>